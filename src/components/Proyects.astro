---
import projects from "../config/proyects.json";
---

<h1 class="font-bold text-5xl my-4">Projects</h1>

{
  projects.map((project) => (
    <div class="flex flex-col md:flex-row text-center md:text-left gap-5 mx-5">
      <div class="flex-1 mb-5">
        <h2 class="font-bold text-2xl my-4">{project.title}</h2>
        <p class="my-2 mb-5">{project.description}</p>
        <button class="bg-yellow-700 px-3 py-2 hover:bg-yellow-600">More Info</button>
      </div>
      <div class="flex-1">
        <img src={project.image} alt="project" />
      </div>
    </div>
  ))
}
